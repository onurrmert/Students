<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.InsertFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:text="Save" />

        <EditText
            android:id="@+id/nameEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student Name"
            android:textColorHint="@color/light_black"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/classEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:maxLength="4"
            android:textColorHint="@color/light_black"
            android:hint="Student class"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/notesEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student Note"
            android:inputType="number"
            android:maxLength="3"
            android:textColorHint="@color/light_black"
            android:text="" />

        <EditText
            android:id="@+id/opinionEdit"
            android:layout_height="150dp"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student Opinion"
            android:gravity="top"
            android:textColorHint="@color/light_black"
            android:inputType=""
            android:text="" />

        <Button
            android:id="@+id/insert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/green"
            android:text="Save"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>