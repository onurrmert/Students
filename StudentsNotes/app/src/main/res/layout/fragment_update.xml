<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/updateView"
    tools:context=".View.UpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Update"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/nameEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student Name"
            android:inputType="textPersonName"
            android:text=""
            android:textColorHint="@color/light_black" />

        <EditText
            android:id="@+id/classEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student class"
            android:inputType="textPersonName"
            android:text=""
            android:maxLength="4"
            android:textColorHint="@color/light_black" />

        <EditText
            android:id="@+id/notesEdit"
            style="@style/editStyle"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:hint="Student Note"
            android:maxLength="3"
            android:inputType="number"
            android:text=""
            android:textColorHint="@color/light_black" />

        <EditText
            android:id="@+id/opinionEdit"
            style="@style/editStyle"
            android:layout_height="150dp"
            android:background="@drawable/my_edit_background"
            android:ems="10"
            android:gravity="top"
            android:hint="Student Opinion"
            android:inputType="textMultiLine"
            android:text=""
            android:textColorHint="@color/light_black" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/yellow"
            android:text="Update"
            android:textColor="@color/black"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>